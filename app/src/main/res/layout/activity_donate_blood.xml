<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background_image">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Donor Name Field -->
        <EditText
            android:id="@+id/etDonorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Donor Name"
            android:inputType="textPersonName"
            android:layout_marginBottom="12dp"/>

        <!-- Donor Contact Field -->
        <EditText
            android:id="@+id/etDonorContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Donor Contact"
            android:inputType="phone"
            android:layout_marginBottom="12dp"/>

        <!-- Blood Type Spinner -->
        <Spinner
            android:id="@+id/spnBloodType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <!-- Donation Amount Field -->
        <EditText
            android:id="@+id/etDonationAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Donation Amount (ml)"
            android:inputType="number"
            android:layout_marginBottom="12dp"/>

        <!-- Notes Field -->
        <EditText
            android:id="@+id/etNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Notes (Optional)"
            android:inputType="textMultiLine"
            android:lines="3"
            android:gravity="top"
            android:layout_marginBottom="24dp"/>

        <!-- Submit Donation Button -->
        <Button
            android:id="@+id/btnSubmitDonation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Donation"
            android:background="#6200EE"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</ScrollView>