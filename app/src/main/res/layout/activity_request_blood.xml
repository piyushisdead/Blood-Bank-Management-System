<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/background_image">

    <EditText
        android:id="@+id/etRequesterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Requester Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etRequesterContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Requester Contact"
        android:layout_marginTop="16dp"
        android:inputType="phone" />

    <!-- Spinner for selecting blood type -->
    <Spinner
        android:id="@+id/spnBloodType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:spinnerMode="dropdown" />

    <EditText
        android:id="@+id/etRequestAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Request Amount (ml)"
        android:layout_marginTop="16dp"
        android:inputType="number" />

    <Button
        android:id="@+id/btnSubmitRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Request"
        android:layout_marginTop="24dp"
        android:background="#03DAC5"
        android:textColor="#FFFFFF" />
</LinearLayout>