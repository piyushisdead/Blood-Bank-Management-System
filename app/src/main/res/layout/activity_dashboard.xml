<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/background_image">

    <!-- Welcome Message TextView -->
    <TextView
        android:id="@+id/tvWelcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the Blood Bank Dashboard"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnDonateBlood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Donate Blood"
        android:layout_marginBottom="16dp"
        android:background="#6200EE"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnRequestBlood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request Blood"
        android:layout_marginBottom="16dp"
        android:background="#03DAC5"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnViewBloodStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Blood Stock"
        android:background="#3700B3"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnFindBloodBanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nearby Blood Banks"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"/>


</LinearLayout>